<div class="row">
    <div class="col col-12">
        <main class="form-signin">
            <form method="post" action="/admin/login">
                <img class="mb-4" src="/images/logo_tux.svg" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Iniciar sesi√≥n</h1>

                <div class="form-floating">
                    <input type="text" class="form-control" id="user" name="user" placeholder="Usuario...">
                    <label for="user">Usuario</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Clave...">
                    <label for="password">Clave</label>
                </div>

                <button class="w-100 btn btn-lg btn-primary" type="submit">Ingresar</button>
                <p class="mt-5 mb-3 text-muted text-center">&copy; 2021</p>
            </form>

            {{#if error}}
            <p class="text-center">Usuario inexistente</p>
            {{/if}}

        </main>
    </div>
    
</div>